<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.citra.konveksi.plama">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rsatu"
        android:background="@color/bg"
        android:layout_marginTop="33dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"        >

        <ImageView
            android:id="@+id/d1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/detail_transaksi" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notr"
            android:text="nomor transaksi"
            android:layout_toRightOf="@id/d1"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tot"
            android:text="total harga"
            android:layout_toRightOf="@id/d1"
            android:layout_marginTop="15dp"
            android:layout_below="@id/notr"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail"
            android:text="detail"
            android:textColor="@color/red"
            android:layout_marginRight="30dp"
            android:layout_marginTop="2dp"
            android:layout_below="@id/notr"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rdua"
        android:background="@color/bg"
        android:layout_below="@id/rsatu"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"        >

        <ImageView
            android:id="@+id/d2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/detail_transaksi" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notr2"
            android:text="nomor transaksi"
            android:layout_toRightOf="@id/d2"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tot2"
            android:text="total harga"
            android:layout_toRightOf="@id/d2"
            android:layout_marginTop="15dp"
            android:layout_below="@id/notr2"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail2"
            android:text="detail"
            android:textColor="@color/red"
            android:layout_marginRight="30dp"
            android:layout_marginTop="2dp"
            android:layout_below="@id/notr2"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

</RelativeLayout>
